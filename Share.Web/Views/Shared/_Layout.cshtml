            "positionClass": "toast-top-center",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }

        var me = $("#message").val();
        if (me != null && me != "") {
            toastr.warning(me + "模板页弹窗");
        }

        $(function () {
            $('#main').viewer({
                url: 'data-original',
                title: false,
                navbar: true
            });
        });
         function loginOut() {
            $.post("/Login/LoginOut", {}, function (data) {
                if (data.code==1) {
                       layer.msg(data.msg, { icon: data.code });
                        setTimeout(function () {
                            window.location.href = data.url;
                        }, 1500);
                }
                else {
                     layer.msg(data.msg, { icon: data.code }); 
                }
            })
        }
