<?xml version="1.0" ?>


<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <targets>

 


    <!--write log message to Visual Studio Output-->
    <target name="file" xsi:type="File"  fileName="${basedir}/Log/${level}/${shortdate}.log" layout="NLog: ${date:format=HH\:mm\:ss} | ${level:uppercase=true:padding=-5} | ${message}|${exception:format=ToString}" />
  </targets>

  <rules>
    <!--TRACE,DEBUG,INFO,WARN,ERROR,FATAL-->
    <logger name="*" minlevel="Trace" writeTo="file" /> 
  </rules>
</nlog>